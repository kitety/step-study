/* components/epsoide/index.wxss */
.container {
  height: 60rpx;
  display: inline-flex;
}
.plain {
  font-size: 32rpx;
}
.index {
  font-size: 60rpx;
  line-height: 60rpx;
  font-weight: 800;
  margin-right: 14rpx;
}
.index-container{
  display: flex;
  flex-direction: row;
  align-items: baseline;
}
.line {
  height: 44rpx;
  margin-right: 14rpx;
  border-left: 1px solid black;
}
.date-container{
  display:flex;
  flex-direction: column;
  margin-top: 5rpx;
}
.month{
  font-style: 22rpx;
  line-height: 22rpx;
}
.year{
  font-size: 20rpx;
  line-height: 34rpx;
}
